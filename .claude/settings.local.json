{
	"permissions": {
		"deny": ["Bash(git worktree:*)", "EnterWorktree"],
		"allow": [
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(git status:*)",
			"Bash(git diff:*)",
			"Bash(git log:*)",
			"Bash(git branch:*)",
			"Bash(git stash:*)",
			"Bash(bun:*)",
			"Bash(bunx:*)",
			"Bash(cargo fmt:*)",
			"Bash(cargo clippy:*)",
			"Bash(cargo check:*)",
			"Bash(cargo build:*)",
			"Bash(cargo test:*)",
			"Bash(ls:*)",
			"Bash(mkdir:*)",
			"Bash(cp:*)",
			"Bash(mv:*)",
			"Bash(chmod:*)",
			"Bash(test:*)",
			"Read",
			"Write",
			"Edit",
			"Glob",
			"Grep",
			"WebFetch",
			"WebSearch",
			"Task",
			"NotebookEdit"
		]
	},
	"hooks": {
		"PreToolUse": [],
		"Notification": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notification/play-sound.sh"
					}
				]
			}
		]
	},
	"disableAllHooks": false
}
